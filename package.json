{
    "name": "pulsar",
    "version": "0.1.0",
    "description": "Solana RWA Risk Gateway with x402 Protocol",
    "private": true,
  "workspaces": [
    "api",
    "client",
    "frontend"
  ],
    "scripts": {
        "build": "./scripts/build.sh",
    "test": "./scripts/test.sh",
    "test:anchor": "PATH=\"$HOME/.cargo/bin:$PATH\" $HOME/.cargo/bin/anchor test || anchor test",
        "lint": "anchor fmt",
        "deploy:local": "anchor deploy",
        "deploy:devnet": "anchor deploy --provider.cluster devnet",
        "deploy:mainnet": "anchor deploy --provider.cluster mainnet",
    "api:dev": "cd api && npm run dev",
    "api:build": "cd api && npm run build",
    "api:test": "cd api && npm test",
    "client:build": "cd client && npm run build",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build"
    },
    "keywords": [
        "solana",
        "anchor",
        "rwa",
        "x402",
        "defi",
        "api-gateway"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@coral-xyz/anchor": "^0.31.1",
        "@solana/web3.js": "^1.87.6",
        "@types/chai": "^4.3.14",
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.10.0",
        "chai": "^4.3.10",
        "chai-as-promised": "^7.1.2",
        "mocha": "^10.2.0",
        "ts-mocha": "^10.0.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    }
}
